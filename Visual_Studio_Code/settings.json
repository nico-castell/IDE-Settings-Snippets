{
    // Privacy settings:
    "telemetry.enableTelemetry": false,
    // Terminal settings:
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cwd": "${fileDirname}",
    "terminal.integrated.shell.windows": "C:/Program Files/PowerShell/7/pwsh.exe",
    "terminal.integrated.fontFamily": "Hack, monospace",
    "terminal.integrated.shellArgs.windows": [
        "-nol", // No logo at the beginning.
        "-i" // Force interactive.
    ],
    "settingsSync.ignoredSettings": [
        "terminal.integrated.fontFamily"
    ],
    "settingsSync.ignoredExtensions": [
        "ms-vscode-remove.remote-wsl",
        "ms-vscode.powershell",
        "dbaeumer.vscode-eslint"
    ],
    "shellLauncher.shells.windows": [
        {
            "shell": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
            "label": "PowerShell 7",
            "launchName": "pwsh"
        },
        {
            "shell": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "label": "Windows PowerShell",
            "launchName": "Win PowerShell"
        },
        {
            "shell": "C:\\Windows\\System32\\cmd.exe",
            "label": "cmd"
        },
        {
            "shell": "C:\\Program Files\\Git\\bin\\bash.exe",
            "label": "Git bash"
        },
        {
            "shell": "C:\\Windows\\System32\\bash.exe",
            "label": "WSL Bash"
        }
    ],
    "shellLauncher.shells.linux": [
        {
            "shell": "/bin/zsh",
            "label": "zsh"
        },
        {
            "shell": "/bin/bash",
            "label": "bash"
        },
        {
            "shell": "zsh",
            "args": [
                "-l"
            ],
            "label": "zsh login shell"
        },
        {
            "shell": "bash",
            "args": [
                "-l"
            ],
            "label": "bash login shell"
        },
        {
            "shell": "/usr/bin/python3",
            "args": [
                "-q"
            ],
            "label": "Python 3"
        }
    ],
    "window.zoomLevel": -1,
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.folders.theme": "specific",
    "material-icon-theme.folders.color": "#a69f1c",
    "material-icon-theme.folders.associations": {
        "dbg": "Debug",
        "about": "Docs"
    },
    "todo-tree.tree.showScanModeButton": true,
    "todo-tree.tree.tagsOnly": true,
    // Files and editor settings:
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.incrementalNaming": "smart",
    "editor.foldingHighlight": false,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.tabCompletion": "onlySnippets",
    "editor.renderLineHighlight": "all",
    "editor.showFoldingControls": "always",
    "editor.renderIndentGuides": true,
    "editor.scrollBeyondLastLine": false,
    "editor.padding.bottom": 40,
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [
        78
    ],
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "workbench.editor.restoreViewState": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 5000,
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.snippet": "xml"
    },
    "files.exclude": {
        "**/.git": true, // Git folder.
        "**/.~*": true, // Windows temp file.
        "**/.*~": true, // UNIX temp file.
        "**/*.db": true, // Windows "I don't know what it does" file.
        "**/*.ini": true, // Windows folder properties.
        "**/*.url": true // Windows internet shortcut.
    },
    // Version control settings:
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.smartCommitChanges": "tracked",
    "git.enableSmartCommit": true,
    "git.pruneOnFetch": true,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.statusBar.format": "${author, }${agoOrDate}${' via 'pullRequest}${ â€¢ message|50?}",
    "gitlens.views.branches.files.layout": "tree",
    "gitlens.views.commits.files.layout": "tree",
    "gitlens.views.contributors.files.layout": "tree",
    "gitlens.views.remotes.files.layout": "tree",
    "gitlens.views.searchAndCompare.files.layout": "tree",
    "gitlens.views.tags.files.layout": "tree",
    "gitlens.gitCommands.skipConfirmations": [
        "fetch:command",
        "stash-push:command",
        "switch:command",
        "branch-create:command"
    ],
    // Debugging settings:
    "debug.onTaskErrors": "abort",
    "debug.openDebug": "openOnSessionStart",
    "debug.openExplorerOnEnd": true,
    "debug.toolBarLocation": "docked",
    // Connecting to remotes settings:
    "remote.SSH.configFile": "/home/nicolas/.ssh/vs_config",
    // Language specific settings:
    // C family settings:
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.rulers": [
            120
        ]
    },
    "C_Cpp.clang_format_style": "file", // Use custom .clang-config
    "cmake.revealLog": "never",
    "cmake.configureOnOpen": true,
    "doxdocgen.c.triggerSequence": "///",
    "doxdocgen.c.commentPrefix": "/// ",
    "doxdocgen.c.firstLine": "",
    "doxdocgen.c.lastLine": "",
    "doxdocgen.generic.order": [
        "brief",
        "tparam",
        "param",
        "return",
        "custom"
    ],
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 2
    },
    "[csharp]": {
        "editor.rulers": [
            78,
            132 // Adjust custom limit to take into account normal indentation.
        ],
        "editor.codeLens": false
    },
    "vsintellicode.modify.editor.suggestSelection": "disabled",
    // Java settings:
    "java.configuration.checkProjectSettingsExclusions": false,
    // Markup settings:
    "[xml]": {
        "editor.tabSize": 2
    },
    "xml.java.home": "/usr/",
    // "xml.java.home": "C:/Program Files/Java/jre1.8.0_281",
    "[html]": {
        "editor.tabSize": 2
    },
    // System scripts settings:
    "[reg]": {
        "editor.tabSize": 2
    },
    "bashIde.explainshellEndpoint": "http://localhost:5000",
    "powershell.powerShellDefaultVersion": "PowerShell (x64)",
    // Python settings:
    "python.languageServer": "Pylance",
    "python.showStartPage": false,
    // Plain text settings:
    "[plaintext]": {
        "editor.tabSize": 2
    }
}
