{
    // Privacy settings:
    "telemetry.enableTelemetry": false,
    // Terminal settings:
    "terminal.integrated.fontFamily": "Hack",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cwd": "${fileDirname}",
    "terminal.integrated.shell.windows": "C:/Program Files/PowerShell/7/pwsh.exe",
    "terminal.integrated.shellArgs.windows": [
        "-nol", // No logo at the beginning.
        "-i" // Force interactive.
    ],
    "settingsSync.ignoredSettings": [
        "terminal.integrated.fontFamily"
    ],
    "workbench.startupEditor": "none",
    // Appearance settings:
    "window.zoomLevel": -1,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "icons-carbon",
    "workbench.colorTheme": "One Dark Pro",
    "material-icon-theme.folders.theme": "specific",
    "material-icon-theme.folders.color": "#a69f1c",
    "material-icon-theme.folders.associations": {
        "dbg": "Debug",
        "about": "Docs"
    },
    "material-icon-theme.files.associations": {
        "CMakeLists.txt.in": "CMake"
    },
    "todo-tree.tree.showScanModeButton": false,
    "todo-tree.tree.tagsOnly": true,
    // Files and editor settings:
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.incrementalNaming": "smart",
    "editor.foldingHighlight": false,
    // "editor.fontFamily": "Fira Code",
    "editor.fontFamily": "'Fira Code', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.tabCompletion": "onlySnippets",
    "editor.renderLineHighlight": "all",
    "editor.showFoldingControls": "always",
    "editor.renderIndentGuides": true,
    "editor.scrollBeyondLastLine": false,
    "editor.padding.bottom": 40,
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [
        78
    ],
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "diffEditor.renderSideBySide": false,
    "workbench.editor.restoreViewState": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 5000,
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.snippet": "xml"
    },
    "files.exclude": {
        "**/.git": true, // Git folder.
        "**/.~*": true, // Windows temp file.
        "**/.*~": true, // UNIX temp file.
        "**/*.db": true, // Windows "I don't know what it does" file.
        "**/*.ini": true, // Windows folder properties.
        "**/*.url": true // Windows internet shortcut.
    },
    // Version control settings:
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.smartCommitChanges": "tracked",
    "git.enableSmartCommit": true,
    "git.pruneOnFetch": true,
    "git.autoRepositoryDetection": "subFolders",
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.statusBar.format": "${author, }${agoOrDate}${' via 'pullRequest}${ â€¢ message|50?}",
    "gitlens.views.branches.files.layout": "tree",
    "gitlens.views.commits.files.layout": "tree",
    "gitlens.views.contributors.files.layout": "tree",
    "gitlens.views.remotes.files.layout": "tree",
    "gitlens.views.searchAndCompare.files.layout": "tree",
    "gitlens.views.tags.files.layout": "tree",
    "gitlens.gitCommands.skipConfirmations": [
        "fetch:command",
        "stash-push:command",
        "switch:command",
        "branch-create:command"
    ],
    // Debugging settings:
    "debug.onTaskErrors": "abort",
    "debug.openDebug": "openOnSessionStart",
    "debug.openExplorerOnEnd": true,
    "debug.toolBarLocation": "docked",
    // Connecting to remotes settings:
    "remote.SSH.configFile": "/home/nicolas/.ssh/vs_config",
    // Language specific settings:
    // C family settings:
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.rulers": [
            120
        ]
    },
    "C_Cpp.clang_format_style": "file", // Use custom .clang-config
    "cmake.revealLog": "never",
    "cmake.configureOnOpen": true,
    "doxdocgen.c.triggerSequence": "///",
    "doxdocgen.c.commentPrefix": "/// ",
    "doxdocgen.c.firstLine": "",
    "doxdocgen.c.lastLine": "",
    "doxdocgen.generic.order": [
        "brief",
        "tparam",
        "param",
        "return",
        "custom"
    ],
    "testMate.cpp.log.logSentry": "enable",
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": true
    },
    "markdown.preview.scrollEditorWithPreview": false,
    "markdown.preview.scrollPreviewWithEditor": false,
    "[csharp]": {
        "editor.rulers": [
            78,
            132 // Adjust custom limit to take into account normal indentation.
        ],
        "editor.codeLens": false
    },
    // Markup settings:
    "[xml]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2
    },
    // System scripts settings:
    "[reg]": {
        "editor.tabSize": 2
    },
    "bashIde.explainshellEndpoint": "http://localhost:5000",
    "powershell.powerShellDefaultVersion": "PowerShell (x64)",
    // Python settings:
    "python.languageServer": "Pylance",
    "python.showStartPage": false,
    // Plain text settings:
    "[plaintext]": {
        "editor.tabSize": 2
    }
}
